<!-- home.handlebars -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bienvenido a la tienda</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
  <!-- Contenido principal de la página -->
  <div class="container mt-4">
    <h3>Lista de Productos</h3>

    <div class="row">
      {{#each products}}
        <div class="col-md-4">
          <div class="card">
            <img src="{{getThumbnail this.thumbnails}}" class="card-img-top" alt="{{this.title}}" onerror="console.log('Error loading image: ' + this.src)">
            <div class="card-body">
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">${{this.price}}</p>
              <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productModal{{this._id}}">
                Ver detalles
              </button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

  <!-- Modal para mostrar los detalles del producto -->
  {{#each products}}
    <div class="modal fade" id="productModal{{this._id}}" tabindex="-1" aria-labelledby="productModalLabel{{this._id}}" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="productModalLabel{{this._id}}">{{this.title}}</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <img src="{{getThumbnail this.thumbnails}}" class="img-fluid" alt="{{this.title}}">
            <p>{{this.description}}</p>
            <p><strong>Precio:</strong> ${{this.price}}</p>
            <p><strong>Categoría:</strong> {{this.category}}</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="button" class="btn btn-primary" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
          </div>
        </div>
      </div>
    </div>
  {{/each}}

  <script src="https://cdn.socket.io/4.0.1/socket.io.min.js"></script>
  <!-- Script de Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>