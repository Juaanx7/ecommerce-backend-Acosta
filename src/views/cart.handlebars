<!-- home.handlebars -->
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Carrito</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Contenido principal de la página -->
  <div class="container mt-5">
  <h1 class="mb-4 text-center">Carrito de Compras</h1>

  {{#if cart.products.length}}
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th>Imagen</th>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Total</th>
            <th>Acción</th>
          </tr>
        </thead>
        <tbody>
          {{#each cart.products}}
            <tr>
              <td>
                <img 
                  src="{{getThumbnail this.product.thumbnails}}" 
                  alt="{{this.product.title}}" 
                  width="50" 
                  class="img-thumbnail">
              </td>
              <td>{{this.product.title}}</td>
              <td>{{formatPrice this.product.price}}</td>
              <td>{{this.quantity}}</td>
              <td>{{formatPrice (multiply this.product.price this.quantity)}}</td>
              <td>
                <button 
                  onclick="removeFromCart('{{this.product._id}}')"
                  class="btn btn-danger btn-sm">
                  Eliminar
                </button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="text-right mb-4">
      <h4>Total a pagar: {{formatPrice (calculateTotal cart.products)}}</h4>
    </div>

    <div class="text-center">
      <button onclick="checkout()" class="btn btn-success">
        Finalizar compra
      </button>
    </div>
  {{else}}
    <div class="alert alert-info text-center" role="alert">
      Tu carrito está vacío
    </div>
  {{/if}}
</div>

<script>
  function removeFromCart(productId) {
    const cartId = localStorage.getItem("cartId");

    fetch(`/api/carts/${cartId}/product/${productId}`, { method: "DELETE" })
      .then(response => response.json())
      .then(data => {
        if (data.error) {
          alert("Error: " + data.error);
        } else {
          alert("Producto eliminado del carrito");
          location.reload();
        }
      })
      .catch(error => console.error("Error al eliminar:", error));
  }

  function checkout() {
    alert("¡Compra finalizada! (Aquí podrías integrar un pago)");
    localStorage.removeItem("cartId");
    location.href = "/";
  }
</script>
</body>
</html>